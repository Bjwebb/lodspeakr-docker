{%include "../../includes/header.inc"%}
    <div class="container">
      <div class="page-header">
        <div class="row">
          <div class="col-md-12">
            <h1>{{first.main.name.value}} <small>Project</small></h1>
          </div>
      </div>
      
      <div class="row">
        <div class="col-md-12">
          <div id="map" style="height:240px"></div>
          <script type="text/javascript">
            var map = L.map('map').setView([28, 3], 5);
            var marker = L.marker([28, 3]).addTo(map);
            marker.bindPopup('<b><a href="#">Project</a></b><br>(Operator)').openPopup();
          </script>
          
          {%include "../../includes/default_map.js.inc"%}

        </div>
        
        <div class="col-md-2">
          
          
        </div>
      </div><!--end row-->
      
      <div class="row">
        <div class="col-md-6">
          <div class="info-box">
            <h2>Project Info</h2>
            <p>ID: 
              {% for i,path_item in uri|explode:"/" %}
                {% if i >= 4  %}
                  {{ path_item }}
                    {% if i == 4  %}
                       /
                    {% endif %}
                {% endif %}
              {% endfor %}
            </p>
            <ul style="margin: 0;padding-left: 18px;">
            <li>Aliases: </li>
            <li> Commodity: {% for row in models.commodities %} {{ row.commodityType.value }} {%if !forloop.last%},{% endif %}
            {% endfor %}</li>
            <li>status (status history): </li>
            <li>Location: {% for location in models.countries %} <a href="{{ location.location.value }}">{{ location.location_name.value }}</a>{%if !forloop.last%},{% endif %}
            {% endfor %}</li>
            <li>associated contracts (link)</li>
            <li>associated concessions (link)</li>
            </ul>

            
            <h4>Company Group</h4>
            <select>
              <option value="volvo">StatOil</option>
              <option value="saab">BP</option>
              <option value="mercedes">Tullow</option>
            </select>
            
            
            <!--<p>
            Commodity Details: {{ first.main.commodityDetails.value }}
            </p>
            <p>
            Identifier: {{ first.main.identifier.value }}
            </p>
            <p>
            Project Type: {{ first.main.projectType.value }}
            </p>
            <p>
            Link: {{ first.main.url.value }}
            </p>-->
            
            
          </div>
        </div>
        <div class="col-md-6">
          <h2>Companies</h2>

          <table class="table table-striped">
          <thead>
            <tr><th>Name</th><th>Group</th><th>Share</th></tr>
          </thead>
          {% for row in models.companies %}    
          <tr>
              <td><a href="{{row.company.value}}">{{ row.company_name.value }}</a></td>
              <td></td>
              <td>{{ row.share.value }}</td>
              <!--<td><a href="{{row.company.value}}">{{ row.company.value|explode:"/"|pop }}</a></td>-->
          </tr>
          {% endfor %}
          </table>
        
        
        <!--<h2>Participanting Companies</h2>
          <table class="table table-striped">
            <thead>
              <tr><th>Name</th><th>Share</th></tr>
            </thead>
            {% for row in models.companies %}    
            <tr>
                <td><a href="{{ row.company.value }}">{{ row.company_name.value }}</a></td>
                <td>{{ row.share.value }}</td>
            </tr>
            {% endfor %}
          </table>-->
        </div>
      </div>
      
      <h2>Production Stats</h2>
       <table class="table table-striped">
        <thead>
          <tr><th>Year</th><th>Price</th><th>Price per unit</th><th>Unit</th><th>Volume</th><th>ID</th></tr>
        </thead>
      {% for row in models.production_stats %} 
       <tr>
          <td>{{ row.year.value }}</td>
          <td>{{ row.price.value }}</td>
          <td>{{ row.priceUnit.value }}</td>
          <td>{{ row.unit.value }}</td>
          <td>{{ row.volume.value }}</td>
          <td><a href="{{ row.stats.value }} "><span data-toggle="tooltip" data-placement="left" title="{{ row.stats.value|explode:"/"|pop }}" class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a></td>

       </tr>
        {% endfor %}
      </table>








      <h2>Payments</h2>
      <table class="table table-striped">
        <thead>
          <tr><th>Paid by</th><th>Paid to</th><th>ID</th><th>Payment Year</th><th>Payment or receipt?</th><th>Payment Type</th><th>Currency</th><th>Value</th></tr>
        </thead>
        {% for row in models.payments %}    
        <tr>
            <td><a href="{{ row.company.value }}">{{ row.company_name.value }}</a></td>
            <td><a href="{{ row.country.value }}">{{ row.country_name.value }}</a></td>
            <td><a href="{{ row.companyPayment.value }}">{{ row.companyPayment.value|explode:"/"|pop }}</a></td>
            {%if row.date%}
              <td>{{ row.date.value|date:"Y" }}</td>
              {%else%}
                {%if row.year%}
                  <td>{{ row.year.value }}</td>
                {%else%}
                  <td></td>
                {%endif%}
            {%endif%}
            <td>{{ row.paymentOrReceipt.value|explode:"/"|pop }}</td>
            <td>{{ row.type.value }}</td>
            <td>{{ row.currency.value }}</td>
            <td>{{ row.amount.value }}</td>
        </tr>
        {% endfor %}
      </table>

      {%include "../../includes/advanced_links.inc"%}
      
    </div>    
{%include "../../includes/footer.inc"%}


